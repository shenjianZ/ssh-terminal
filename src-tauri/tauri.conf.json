{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "SSH Terminal",
    "version": "0.6.3",
    "identifier": "com.aisi.ssh-terminal",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "SSH Terminal",
                "width": 1200,
                "height": 700,
                "x": 100,
                "y": 30,
                "minWidth": 100,
                "minHeight": 100,
                "transparent": false,
                "decorations": true,
                "devtools": true
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
